<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlt_import_bon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/importt_bon_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importation bons transfers"
            android:textSize="18dp"
            android:textColor="@color/black_overlay"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/descrip_import_bon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'importer les bons de transfert depuis le serveur distant"
            android:layout_below="@+id/importt_bon_txt"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@+id/descrip_import_bon"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_import_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/importt_client_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Synchronisation clients"
            android:textSize="18dp"
            android:textColor="@color/black_overlay"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/descrip_import_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'importer la liste des clients depuis le serveur distant"
            android:layout_below="@+id/importt_client_txt"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_import_produit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onRelativeClick"
        android:background="@drawable/import_export_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/importt_produit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Synchronisation des produits"
            android:textSize="18dp"
            android:textColor="@color/black_overlay"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/descrip_import_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ça vous permet d'importer la liste des produits depuis le serveur distant"
            android:layout_below="@+id/importt_produit_txt"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/view1"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@+id/descrip_import_produit"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
    </RelativeLayout>
</LinearLayout>